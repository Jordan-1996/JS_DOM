<p id="notice"><%= notice %></p>
<%= render 'form', product: @product %>
<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name product</th>
      <th>Price</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name_product %></td>
        <td><%= product.price %></td>
        <td><%= product.amount %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
